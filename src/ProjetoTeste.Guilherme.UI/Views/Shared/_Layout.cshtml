@{
    ViewBag.Application = "Minha Primeira App";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @ViewBag.Application</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark fixed-top">
        <div class="container container-fluid">
            <a class="navbar-brand text-white" href="~/Home/Index">
                Minha App
            </a>
            <button class="navbar-toggler bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active text-white" aria-current="page" href="~/Home/Index">Inicio</a>
                    <a class="nav-link text-light" href="~/Home/About">Sobre</a>
                    <a class="nav-link text-white" href="~/Home/Contact">Contato</a>
                    <a class="nav-link text-white" href="~/Home/NossasLojas">Nossas Lojas</a>
                    <a class="nav-link text-white" href="~/Produto/Index">Produtos</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />

        @Html.Partial("_Rodape")
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/meuScript.js"></script>
</body>
</html>